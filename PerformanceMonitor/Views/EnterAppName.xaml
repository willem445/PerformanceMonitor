<Window x:Class="PerformanceMonitor.EnterAppName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PerformanceMonitor"
        mc:Ignorable="d"
        Title="EnterAppName" Height="104.775" Width="182.413">
    <StackPanel Orientation="Vertical" Margin="0,10,0,0">
        <StackPanel Orientation="Horizontal">
            <Label Content="Enter Name:"></Label>
            <TextBox x:Name="appNameTextBox" Width="90"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,6,0">
            <Button x:Name="cancelButton" Content="Cancel" Margin="5,5,2,5" HorizontalAlignment="Right" Width="50" Click="cancelButton_Click"></Button>
            <Button x:Name="okayButton" Content="Okay" Margin="5,5,2,5" HorizontalAlignment="Right" Width="50" Click="okayButton_Click"></Button>
        </StackPanel>
    </StackPanel>
</Window>
